# ==========================
# FASTAPI
# ==========================
# Port et host de l'application FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# ==========================
# ELASTICSEARCH / LOGGING
# ==========================
# Hôte Elasticsearch
ELK_HOST=http://localhost:9200
# Nom de l'index pour logs
ELK_INDEX=scoring_fraude_logs
# Niveau de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==========================
# KEYCLOAK / AUTHENTICATION
# ==========================
# URL du serveur Keycloak
KEYCLOAK_URL=http://localhost:8080/auth
# Realm Keycloak
KEYCLOAK_REALM=myrealm
# Client ID Keycloak
KEYCLOAK_CLIENT_ID=scoring-api
# Secret client (si confidential)
KEYCLOAK_CLIENT_SECRET=changeme
# Audience / Resource server
KEYCLOAK_AUDIENCE=scoring-api

# ==========================
# DATABASE (OPTIONNEL)
# ==========================
# Exemple PostgreSQL pour stockage éventuel
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scoring_db
DB_USER=postgres
DB_PASSWORD=changeme

# ==========================
# JWT / AUTH
# ==========================
# Durée de vie des tokens en secondes
JWT_EXP_DELTA_SECONDS=3600

# ==========================
# ENV
# ==========================
# Environment: local, dev, staging, prod
ENVIRONMENT=local
